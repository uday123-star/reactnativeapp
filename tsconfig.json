{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "sourceMap": true,
    "types": ["jest", "node"],
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./types"
    ]
  },
  "include": [
    "**/*",
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "bin"
  ]
}
